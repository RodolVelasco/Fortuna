{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
<div class="login-logo">
    <a href="{{ app_config.app_website }}"><b>{{ app_config.app_name }}</b></a>
</div>
<div class="login-box-body">
    <p class="login-box-msg">Renueva tu contrase√±a</p>
    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
    {% form_theme form 'AppBundle:Form:fields_for_fos_registration.html.twig' %}
    <br/>
    {{ form_widget(form) }}
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
            <input type="submit" class="btn btn-primary btn-block btn-flat" value="{{ 'resetting.reset.submit'|trans }}" />
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
