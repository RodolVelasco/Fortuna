{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="login-logo">
    <a href="{{ app_config.app_website }}"><b>{{ app_config.app_name }}</b></a>
</div>
<div class="login-box-body">
    <p class="login-box-msg"><strong>Confirmaci√≥n de cuenta</strong></p>
        <p style="text-align: justify; text-justify: inter-word;">
            {{ 'registration.confirmed'|raw|trans({'%username%': user.username}) }}
        </p>
        {% include ":flash_messages:flash-messages.html.twig" %}
        {% if targetUrl %}
        <p align="center"><a href="{{ path("sorteo") }}">{{ 'registration.back'|trans }}</a></p>
        {% endif %}
</div>
{% endblock fos_user_content %}
