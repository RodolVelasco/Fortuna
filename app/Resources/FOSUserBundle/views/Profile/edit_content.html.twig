{% extends "AppBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    <i class="fa fa-user"></i> Perfil
    <small>Edición de información de usuario</small>
  </h1>
  {% include 'AppBundle:Default:breadcrumb.html.twig' %}
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Formulario</h3>
                </div><!-- /.box-header -->
                <br/>
                {#{% include ":flash_messages:flash-messages.html.twig" %}#}
                {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'form-horizontal form-label-left fos_user_profile_edit' } }) }}
                {% form_theme form 'AppBundle:Form:adminlte_fields_centered_form.html.twig' %}
                    <div class="box-body">
                        {# {{ form_widget(form) }} #}
                        {{ form_row(form.username) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.nombre) }}
                        {{ form_row(form.apellido) }}
                        {{ form_row(form.telefono) }}
                        {{ form_row(form.dui) }}
                        {{ form_row(form.fechaNacimiento) }}
                        {{ form_row(form.sexo) }}
                        {{ form_row(form.departamentoMunicipio) }}
                        {{ form_row(form.direccionPrimaria) }}
                        {{ form_row(form.current_password) }}
                        {{ form_rest(form) }}
                        <div class="box-footer">
                            <div class="col-sm-offset-4 col-sm-3">
                                <a href="{{ path("fos_user_profile_show") }}" class="btn btn-default"> Cancelar </a>
                                <input type="submit" class="btn btn-primary pull-right" value="{{ 'profile.edit.submit'|trans }}" />
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div> <!-- ./col-xs-12 -->
    </div> <!-- ./row -->
</section>
{% endblock body %}
{% block javascripts %}
{{ parent() }}
<script>
    (function($) {
        $('#fos_user_profile_form_fechaNacimiento').datepicker({
            format: 'yyyy-mm-dd',
            language: "es",
            locale: "es",
            changeYear: true,
            autoclose: true
        });

        $('#fos_user_profile_form_sexo').bootstrapToggle({});


        $('#fos_user_profile_form_telefono').mask('0000-0000');
        $('#fos_user_profile_form_dui').mask('00000000-0');
    })(jQuery);
</script>
{% endblock %}
