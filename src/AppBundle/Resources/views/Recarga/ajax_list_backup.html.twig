{% for entity in entities %}
  <tr>
    <td class="active-row"><input type="checkbox" name="recargas[]" value="{{ entity.id }}"></td>
    <td>{{ entity.id }}</td>
    <td>{{ entity.codigo }}</td>
    <td>{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}</td>
    <td>{{ entity.tipoPagoPorMonedero }}</td>
    <td>{{ entity.recarga }}</td>
    <td>{{ entity.tipoPagoPorMonedero }}</td>
    <td>{{ entity.recargador}}</td>
    <td>{{ entity.fechaRecarga|date('Y-m-d H:i:s') }}</td>
    <td class="hidden-print">
        <div class="text-center">
            <a class="btn btn-info btn-xs" data-toggle="tooltip" data-placement="top" title="Ver" href="{{ path('recarga_show', { 'id': entity.id }) }}"><i class="fa fa-search"></i></a>
            <a class="btn btn-primary btn-xs" data-toggle="tooltip" data-placement="top" title="Modificar" href="{{ path('recarga_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></span></a>
            <a class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" title="Eliminar" href="{{ path('recarga_delete', { 'id': entity.id }) }}"><i class="fa fa-trash"></i></span></a>
        </div>
    </td>
  </tr>
{% else %}
<tr>
    <td colspan="10">
        <div id="msgbox" class="alert alert-danger fade in" role="alert">
            <strong>info !</strong> No se encontraron recargas con los criterios establecidos
        </div>
    </td>
</tr>
{% endfor %}

{% include "AppBundle:Default:pagination.html.twig" %}
<script>
(function($) {

    /* tooltip */
    $('a[data-toggle="tooltip"]').tooltip();

})(jQuery);
</script>
