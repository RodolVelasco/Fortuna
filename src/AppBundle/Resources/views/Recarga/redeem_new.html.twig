{% extends "AppBundle::layout.html.twig" %}
{% block title %}
Sorteo | {{ parent() }}
{% endblock %}
{% block body %}
<section class="content-header">
  <h1>
    <i class="fa fa-barcode"></i> Recarga
    <small>Formulario de recargas</small>
  </h1>
  {% include 'AppBundle:Default:breadcrumb.html.twig' %}
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-default">
                {# <div class="box-body box-profile"> #}
                    <div class="box-header with-border">
                        <h3 class="box-title">Formulario</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form class="form-horizontal" action="{{ path('redeem_code')}}" method="POST" role="form">
                    {% form_theme form 'AppBundle:Form:adminlte_fields_centered_for_redeem_code.html.twig' %}
                        <div class="box-body">
                            {% include "AppBundle:Recarga:form_redeem.html.twig" %}
                            <div class="box-footer">
                                <div class="col-xs-offset-3 col-sm-offset-4 col-md-offset-4 col-lg-offset-4 col-xs-10 col-sm-5 col-md-4 col-lg-3">
                                    <a href="{{ path('sorteo') }}" class="btn btn-default btn-xs">
                                        <i class="fa fa-times-circle"></i> Cancelar
                                    </a>
                                    <button type="submit" name="subvalider" class="btn btn-primary btn-xs pull-right">
                                        <i class="fa fa-edit"></i> Recarga
                                    </button>
                                </div>
                            </div>
                        </div>
                        {# </div> #}
                    </form>
                {# </div> <!-- ./box-body box-profile --> #}
            </div>
        </div> <!-- ./col-md-6 -->
    </div> <!-- ./row -->
</section>
{% endblock body %}

 {% block javascripts %}
{{ parent() }}
<script>
    (function($) {
    })(jQuery);
</script>
{% endblock %}
